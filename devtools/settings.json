// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation
{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
    "profiles": [
        {
            // Make changes here to the cmd.exe profile
            "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
            "name": "cmd",
            "commandline": "cmd.exe",
            "fontFace": "Consolas",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            // Make changes here to the powershell.exe profile
            "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
            "name": "Windows PowerShell",
            "commandline": "powershell.exe",
            "fontFace": "Consolas",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            "guid": "{cfa4360a-5c53-45bb-858f-ef5574adea94}",
            "name": "MSYS2",
            // change to the path of your bash.exe
            "commandline": "D:\\msys64\\msys2_shell.cmd -defterm -here -no-start",
            "startingDirectory": "C:\\Users\\%USERNAME%",
            "fontFace": "Consolas",
            // change to the path of your icon
            "icon": "/path/to/msys2.ico",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            "guid": "{3628a9e3-9cb8-4dd5-8103-39c10409110f}",
            "name": "Git Bash",
            // change to the path of your bash.exe
            "commandline": "D:\\Git\\bin\\bash.exe --login -i",
            "startingDirectory": "C:\\Users\\%USERNAME%",
            "fontFace": "Consolas",
            // change to the path of your icon
            "icon": "/path/to/git.ico",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            "guid": "{914a0d3c-9db4-56f8-a8ac-65f4b7ea8b09}",
            "name": "openSUSE-Leap-15.2",
            "commandline": "wsl -d openSUSE-Leap-15.2",
            "source": "Windows.Terminal.Wsl",
            "fontFace": "Consolas",
            // change to the path of your icon
            "icon": "/path/to/opensuse.png",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            // generate your guid: https://www.guidgen.com
            "guid": "{0f1244de-9193-423a-b77f-a6692690781b}",
            "name": "Aliyun",
            "commandline": "ssh aliyun",
            "fontFace": "Consolas",
            // change to the path of your icon
            "icon": "/path/to/aliyun.png",
            "colorScheme": "Desert",
            "useAcrylic": true,
            "acrylicOpacity": 0.8
        },
        {
            "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
            "name": "Azure Cloud Shell",
            "source": "Windows.Terminal.Azure"
        }
    ],
    // Add custom color schemes to this array
    "schemes": [
        // more schemes: https://windowsterminalthemes.dev
        {
            "name": "Desert",
            "black": "#4d4d4d",
            "red": "#ff2b2b",
            "green": "#98fb98",
            "yellow": "#f0e68c",
            "blue": "#cd853f",
            "purple": "#ffdead",
            "cyan": "#ffa0a0",
            "white": "#f5deb3",
            "brightBlack": "#555555",
            "brightRed": "#ff5555",
            "brightGreen": "#55ff55",
            "brightYellow": "#ffff55",
            "brightBlue": "#87ceff",
            "brightPurple": "#ff55ff",
            "brightCyan": "#ffd700",
            "brightWhite": "#ffffff",
            "background": "#333333",
            "foreground": "#ffffff"
        }
    ],
    // Add any keybinding overrides to this array.
    // To unbind a default keybinding, set the command to "unbound"
    "keybindings": [
        {
            "command": "newTab",
            "keys": "ctrl+t"
        },
        {
            "command": "closeTab",
            "keys": "ctrl+w"
        }
    ]
}
